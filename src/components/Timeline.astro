---
export interface TimelineItem {
  date: string;
  title: string;
  company: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="timeline">
  {
    items.map((item, index) => (
      <div class="timeline-item">
        <div class="timeline-dot" />
        {index < items.length - 1 && <div class="timeline-line" />}
        <div class="timeline-content">
          <span class="timeline-date">{item.date}</span>
          <span class="timeline-role">
            {item.title}<span class="timeline-sep"> Â· </span>{item.company}
          </span>
        </div>
      </div>
    ))
  }
</div>

<style>
  .timeline {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding-left: 0;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto 1fr;
    column-gap: 1rem;
    position: relative;
  }

  .timeline-dot {
    grid-column: 1;
    grid-row: 1;
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background-color: var(--accent);
    margin-top: 0.45rem;
    justify-self: center;
  }

  .timeline-line {
    grid-column: 1;
    grid-row: 2;
    width: 1.5px;
    justify-self: center;
    background-color: color-mix(in srgb, var(--accent) 30%, transparent);
  }

  .timeline-content {
    grid-column: 2;
    grid-row: 1 / -1;
    padding-bottom: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .timeline-date {
    font-size: 0.78rem;
    font-weight: 500;
    color: var(--accent);
    letter-spacing: 0.02em;
  }

  .timeline-role {
    font-size: 0.92rem;
    color: var(--foreground);
  }

  .timeline-sep {
    color: color-mix(in srgb, var(--foreground) 35%, transparent);
  }
</style>
