---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "@/layouts/Layout.astro";
import Timeline from "@/components/Timeline.astro";
import { SITE } from "@/config";
import type { TimelineItem } from "@/components/Timeline.astro";

const experiences: TimelineItem[] = [
  {
    date: "2024.09 — 至今",
    title: "全栈工程师",
    company: "AI 初创公司",
    description:
      "以全栈开发身份经历 AI 浪潮的每一个节点：从 Cursor 初版发布，到 Dify 工作流编排，再到大模型生态爆发。用 AI 重新定义开发方式，Claude Code 是主力工具。",
    tags: ["全栈开发", "AI Engineering", "Claude Code"],
  },
  {
    date: "2023 — 2024",
    title: "Java 后端工程师",
    company: "千里马网信",
    description:
      "深耕 Java 后端一年，积累了扎实的工程能力。拿到转正 Offer 时选择放弃，决定投身 AI 浪潮。",
    tags: ["Java", "后端开发"],
  },
  {
    date: "2022 — 2023",
    title: "实习工程师",
    company: "航天领域",
    description:
      "大三进入航天领域实习，快速理解业务后选择走出舒适区，追求更大的成长空间。",
    tags: ["实习", "航天"],
  },
  {
    date: "2020 — 2024",
    title: "计算机科学与技术",
    company: "本科",
    description: "2024 届计算机科学与技术专业毕业。",
    tags: ["CS"],
  },
];
---

<Layout title={`关于 | ${SITE.title}`}>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="app-layout">
    <section id="about" class="mb-28 max-w-app">
      <h1 class="text-2xl tracking-wider sm:text-3xl">关于</h1>

      <div class="mt-8 app-prose prose-img:border-0">
        <h2>Liz | 全栈工程师 · AI 实践者</h2>
        <p>
          2024 届计算机科学与技术专业，一个用代码和 AI 创造价值的工程师。
        </p>
        <blockquote>
          <p>我的选择始终遵循一个原则：去浪潮的中心，而不是岸边。</p>
        </blockquote>
      </div>

      <div class="mt-12">
        <h2
          class="mb-8 text-xl font-semibold tracking-wide text-foreground sm:text-2xl"
        >
          工作经历
        </h2>
        <Timeline items={experiences} />
      </div>

      <div class="mt-4 app-prose">
        <p>
          <code>全栈开发</code>{" "}
          <code>AI Engineering</code>{" "}
          <code>Claude Code</code>{" "}
          <code>从 0 到 1</code>
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
